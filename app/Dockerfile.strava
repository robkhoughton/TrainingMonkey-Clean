# Dockerfile for Strava Training Personal Service
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV FLASK_APP=strava_app.py
ENV PORT=8080

# ACWR Migration System Environment Variables
ENV ACWR_MIGRATION_ENABLED=true
ENV ACWR_MONITORING_ENABLED=true
ENV ACWR_VISUALIZATION_ENABLED=true

# Create app directory
WORKDIR /app

# Install system dependencies (minimal since we're using REST API)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY strava_requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --trusted-host pypi.org --trusted-host pypi.python.org --trusted-host files.pythonhosted.org -r strava_requirements.txt

# Copy application code - Core modules
COPY strava_app.py .
COPY strava_training_load.py .
COPY db_utils.py .
COPY db_connection_manager.py .
COPY optimized_token_management.py .
COPY optimized_acwr_service.py .
COPY llm_recommendations_module.py .
COPY unified_metrics_service.py .
COPY enhanced_token_management.py .
COPY auth.py .
COPY timezone_utils.py .
COPY elevation_migration_module.py .
COPY sync_fix.py .
COPY settings_utils.py .

# Copy Phase 1 OAuth and Security modules
COPY oauth_error_handler.py .
COPY secure_token_storage.py .
COPY oauth_rate_limiter.py .

# Copy Phase 1 Legal and Registration modules
COPY legal_document_versioning.py .
COPY legal_compliance.py .
COPY legal_validation.py .
COPY legal_audit_trail.py .
COPY registration_validation.py .
COPY password_generator.py .
COPY user_account_manager.py .
COPY registration_status_tracker.py .
COPY registration_session_manager.py .
COPY csrf_protection.py .
COPY email_validation.py .
COPY onboarding_manager.py .
COPY tiered_feature_unlock.py .
COPY onboarding_progress_tracker.py .
COPY onboarding_tutorial_system.py .
COPY new_user_dashboard.py .
COPY progressive_feature_triggers.py .
COPY onboarding_completion_tracker.py .
COPY onboarding_analytics.py .

# Copy Phase 2 Existing User Migration modules
COPY existing_user_migration.py .
COPY migration_notification_system.py .

# Copy TRIMP Enhancement modules
COPY historical_trimp_recalculation.py .
COPY trimp_deployment_monitor.py .
COPY deploy_trimp_enhancement.py .
COPY enhanced_trimp_metrics.py .
COPY comprehensive_admin_dashboard.py .

# Copy ACWR Configuration and Calculation Services
COPY acwr_calculation_service.py .
COPY acwr_configuration_service.py .
COPY acwr_configuration_admin.py .
COPY exponential_decay_engine.py .

# Copy ACWR Migration System Services
COPY acwr_migration_service.py .
COPY acwr_migration_monitoring.py .
COPY acwr_migration_integrity.py .
COPY acwr_migration_rollback.py .
COPY acwr_migration_rollback_executor.py .
COPY acwr_migration_performance_optimizer.py .
COPY acwr_migration_batch_processor.py .
COPY acwr_migration_progress_tracker.py .
COPY acwr_migration_websocket.py .
COPY acwr_migration_admin.py .

# Copy ACWR Visualization Services
COPY acwr_visualization_service.py .
COPY acwr_visualization_routes.py .

# Copy ACWR Feature Flag Services
COPY acwr_feature_flag_admin.py .
COPY acwr_feature_flag_monitor.py .

# Copy test runner (for development use)
COPY run_tests.py .

# Copy templates directory (includes legal, onboarding, and ACWR admin templates)
COPY templates/ /app/templates/

# Copy utils directory (refactored utility functions)
COPY utils/ /app/utils/

# Copy the actual configuration files
COPY config.json .
COPY strava_config.json .
COPY Training_Metrics_Reference_Guide.md .

# Create the directory structure that Flask expects
RUN mkdir -p /app/static
RUN mkdir -p /app/build

# Copy React build files to the correct location for Flask
COPY build/ /app/build/
COPY static/ /app/static/

# Verify the structure is correct
RUN echo "=== Verifying build file structure ===" && \
    ls -la /app/build/ && \
    echo "=== Checking for index.html ===" && \
    ls -la /app/build/index.html || echo "index.html not found" && \
    echo "=== Checking static subdirectory ===" && \
    ls -la /app/build/static/ || echo "static subdirectory not found" && \
    echo "=== Verifying static file structure ===" && \
    ls -la /app/static/ && \
    echo "=== Checking for training-monkey-runner.webp ===" && \
    ls -la /app/static/training-monkey-runner.webp || echo "training-monkey-runner.webp not found" && \
    echo "=== Checking images directory ===" && \
    ls -la /app/static/images/ || echo "images directory not found"

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app
USER app

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the application
CMD exec gunicorn --bind :$PORT --workers 1 --threads 8 --timeout 0 strava_app:app