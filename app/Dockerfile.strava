# Dockerfile for Strava Training Personal Service
FROM python:3.11-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV FLASK_APP=strava_app.py
ENV PORT=8080

# ACWR Migration System Environment Variables
ENV ACWR_MIGRATION_ENABLED=true
ENV ACWR_MONITORING_ENABLED=true
ENV ACWR_VISUALIZATION_ENABLED=true

# Create app directory
WORKDIR /app

# Install system dependencies (minimal since we're using REST API)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY strava_requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --trusted-host pypi.org --trusted-host pypi.python.org --trusted-host files.pythonhosted.org -r strava_requirements.txt

# Copy all Python application code
# .dockerignore handles exclusions (test files, dev scripts, logs, etc.)
COPY *.py .
COPY *.json .

# Copy templates directory (includes legal, onboarding, and ACWR admin templates)
COPY templates/ /app/templates/

# Copy utils directory (refactored utility functions)
COPY utils/ /app/utils/

# Copy chat module (streaming chatbot for Coach page)
COPY chat/ /app/chat/

# Copy email_verification module (email verification for new users)
COPY email_verification/ /app/email_verification/

# Copy Training Metrics Reference Guide (used by LLM)
COPY Training_Metrics_Reference_Guide.md .

# Create the directory structure that Flask expects
RUN mkdir -p /app/static
RUN mkdir -p /app/build

# Copy React build files to the correct location for Flask
COPY build/ /app/build/
COPY static/ /app/static/
COPY landing_static/ /app/landing_static/

# Verify the structure is correct
RUN echo "=== Verifying build file structure ===" && \
    ls -la /app/build/ && \
    echo "=== Checking for index.html ===" && \
    ls -la /app/build/index.html || echo "index.html not found" && \
    echo "=== Checking static subdirectory ===" && \
    ls -la /app/build/static/ || echo "static subdirectory not found" && \
    echo "=== Verifying static file structure ===" && \
    ls -la /app/static/ && \
    echo "=== Checking for training-monkey-runner.webp ===" && \
    ls -la /app/static/training-monkey-runner.webp || echo "training-monkey-runner.webp not found" && \
    echo "=== Checking images directory ===" && \
    ls -la /app/static/images/ || echo "images directory not found" && \
    echo "=== Checking landing_static directory ===" && \
    ls -la /app/landing_static/ || echo "landing_static directory not found" && \
    echo "=== Checking landing_static/images directory ===" && \
    ls -la /app/landing_static/images/ || echo "landing_static/images directory not found"

# Create non-root user for security
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app
USER app

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the application
CMD exec gunicorn --bind :$PORT --workers 1 --threads 8 --timeout 0 strava_app:app